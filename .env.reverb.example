# ============================================
# REVERB CONFIGURATION EXAMPLE
# ============================================
# Copy these lines to your .env file and configure

# Broadcasting Configuration
BROADCAST_CONNECTION=reverb
QUEUE_CONNECTION=database

# Reverb Application Credentials
# Generate these with: php artisan reverb:install
REVERB_APP_ID=123456
REVERB_APP_KEY=abcdefghijklmnopqrstuvwxyz123456
REVERB_APP_SECRET=zyxwvutsrqponmlkjihgfedcba654321

# Reverb Server Configuration
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Reverb Server Binding (internal)
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080

# ============================================
# PRODUCTION SETTINGS (HTTPS)
# ============================================
# For production, use these instead:
# REVERB_HOST=your-domain.com
# REVERB_PORT=443
# REVERB_SCHEME=https

# ============================================
# CORS CONFIGURATION
# ============================================
# Ensure broadcasting/auth is in your cors paths
# Edit config/cors.php if needed
